{
  "extends": "stylelint-config-standard",
  "rules": {
    "indentation": 2,
    "declaration-colon-newline-after": null,
    "number-leading-zero": "never",
    "string-quotes": "single",
    "no-descending-specificity": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["include", "extend", "mixin", "if", "else", "each", "for"]
      }
    ]
  }
}
